def calcular_correcao_eas(logMBH_RG, correcao_dex=CORRECAO_BN_ESPERADA_DEX):
    """
    Aplica o princípio do EAS: log M_EFT = log M_RG + f(Phi).
    Assume-se que a correção f(Phi) é o valor necessário para fechar o balanço de massa.
    """
    # A correção f(Phi) é o termo f(xi_Phi, z) da tese.
    f_phi_aplicada = np.ones_like(logMBH_RG) * correcao_dex
    logMBH_EFT = logMBH_RG + f_phi_aplicada
    
    return logMBH_EFT, f_phi_aplicada

